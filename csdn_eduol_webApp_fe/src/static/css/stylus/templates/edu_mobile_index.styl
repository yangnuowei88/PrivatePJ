//首页各模块公共样式
$modIndexCommonPannel()
.index_pannel
    margin-bottom 0.5rem
    background-color #fff
    padding:0 0.375rem;
    box-sizing: border-box;
    .index_pannel_head
       height 1.75rem
       line-height 1.75rem
       h3
         float left
       .more
          float right
          .more_warp
             display inline-block
             width 0.6rem
             height 0.6rem
             line-height 0.6rem
             text-align center
             background-color  #01b7b5
             border-radius 0.1rem
             margin-left 0.1rem
             i
               font-size 0.5rem
               color #fff

    .index_pannel_content
       overflow hidden
       width 100%
$modIndexCommonPannel()
