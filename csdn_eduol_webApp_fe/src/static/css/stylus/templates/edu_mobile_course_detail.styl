#video_warp
    width 100%
    height 9.125rem
    background-color #fff
    img
      width 100%
      height 100%
.pannel_tab
  background-color #fff
  .pannel_tab_head
    height 2rem
    line-height 2rem
    border-bottom 1px solid #dadada
    text-align center

    span
      display inline-block
      /*width 20%*/
      text-align center
      padding 0 0.6rem
    .active
      border-bottom 1px solid  #ff6600
      height 2rem
  .pannel_tab_content
    width 100%
    overflow hidden
    .pannel_course_warp
        width 500%
        overflow hidden
        .pannel_course
          float left
          width 20%
          /*height 0
          &:nth-child(1)
            height auto*/

          .pannel_course_head_second
            border-top 1px solid #dadada
          .pannel_course_head
            height 1.9rem
            line-height 1.9rem
            border-bottom 1px dotted  #dadada
            padding 0 0.375rem
            .pannel_head_blue
                width 0.3rem
                height 0.6rem
                margin-right 0.3rem
                display inline-block
                vertical-align middle
          .pannel_course_content
             padding 0.5rem 0.375rem 0 0.375rem
             //课程大纲
             .course_outline_ul
               .course_outline_li
                 line-height 1rem
                 .course_num
                   border 1px solid #7be4dc
                   border-radius 50%
                   width 0.75rem
                   height 0.75rem
                   line-height 0.75rem
                   text-align center
                   display inline-block
                   margin-right 0.5rem

                 .course_title
                    width 8.875rem
                    overflow ellipsis
                 .course_free
                    color #ff6600
                    display inline-block
                    margin-left 0.25rem
                 .course_time
                    width 2rem
                    height 0.7rem
                    text-align center
                    overflow ellipsis
                    display inline-block
                 .course_oprea
                    border-top 0.35rem solid transparent
                    border-bottom  0.35rem solid transparent
                    border-left 0.45rem solid #333333
                    width 0
                    height 0
                    display inline-block
                    vertical-align middle
         //课程详情
        .pannel_course_detail
          .pannel_course_content
            .course_detail_li
                line-height 1 rem

          .course_pingjia_li
            margin-bottom 0.5rem
            .pingjia_fabiaoyu
                padding 0 0.25rem
        //讲师
        .teacher_desc1
            margin-bottom 0.5rem
        .teacher_list
          height 2.8rem
          margin-bottom 0.5rem
          overflow hidden

          .teacher_img
            width 2.8rem
            height 2.8rem
            float left
            margin-right 0.75rem
          dd
            float left
            width 11.25rem
            line-height 1rem
          .teacher_name
          .teacher_desc
            overflow ellipsis
          .teacher_price
            .bule_price
              margin-left 1rem

        .pannel_teacher_card
          border-bottom  1px solid  #dadada
          ul

            li
              line-height 1.25rem
              .price_none_flot
                  float none
              .card_tag
                text-align center
                line-height 1.25rem
                display inline-block
                width 2.25rem
                height 1.25rem
                border 1px solid #dddddd
                margin-right 0.5rem
              .card_tag_active
                overflow hidden
                position relative
                text-align center
                line-height 1.25rem
                display inline-block
                width 2.25rem
                height 1.25rem
                border 1px solid #fe9900
                margin-right 0.5rem
                &:after
                  content:''; position absolute;width 100%;height 100%;background-color #ff0000;transform: rotate(-45deg) translate(-20px,-6px);
              .soon_buy_bt
                text-align center
                width 4.5rem
                height 1.5rem
                line-height 1.5rem
                color #ffffff
                float right
                margin-top 0.5rem
                margin-bottom  0.5rem
